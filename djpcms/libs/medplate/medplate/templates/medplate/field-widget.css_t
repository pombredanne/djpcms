{% extends "medplate/elem.css_t" %}

{% block body %}
{{ tag }} input[type="text"],
{{ tag }} input[type="password"],
{{ tag }} textarea,
{{ tag }} select {
    border: none;
    padding: 0;
    width:100%;
    background: transparent;
}

{{ tag }} input:focus,
{{ tag }} textarea:focus,
{{ tag }} select:focus {
    border: none;
    outline: none; /*This is for google chrome*/
}
{% endblock %}