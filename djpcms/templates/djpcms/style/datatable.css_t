{# DATATABLE #}
{% extends "medplate/elem.css_t" %}

{% block body %}
{{ tag }} thead tr th,
{{ tag }} tfoot tr th {
    border: {{ head_border }};{% if head_font_size %}
    font-size: {{ head_font_size }};{% endif %}
    padding: {{ head_padding }};
}
{{ tag }} thead th div.DataTables_sort_wrapper {
    padding-right: 20px;
    position: relative;
}
{{ tag }} thead tr .header {
    cursor: pointer;
}
{{ tag }} tbody tr {
    border-right: 1px solid {{ body_border_color }};
    border-left: 1px solid {{ body_border_color }};
    border-top: {{ row_border }};
    border-bottom: {{ row_border }};
}
{{ tag }} tbody tr:last-child {
    border-bottom: 1px solid {{ body_border_color }};
}
{{ tag }} tbody td {
    padding: 4px;
    vertical-align: top;
}
{{ tag }} tbody tr.odd {
    background-color: {{ odd_background_color }};
}
{{ tag }} thead tr .ui-state-highlight,
{{ tag }} thead tr .ui-state-highlight { {% if highlight %} 
    background-color: {{ highlight.background }};
    color: {{ highlight.color }};{% endif %}
}
{{ tag }} tbody tr.hover td { {% if row_hover_background %}
    background-color: {{ row_hover_background }};{% endif %}{% if row_hover_color %}
    color: {{ row_hover_color }};{% endif %}
}
div.toolbox {
    line-height: 40px;
    height: 40px;
    text-align: left;{% if toolbox_background_color %}
    background: {{ toolbox_background_color }};{% endif %}
    overflow: hidden;
    padding: 4px 0;{% if toolbox_min_height %}
    min-height: {{ toolbox_min_height }};{% endif %}
    /*border: 1px solid {{ body_border_color }};*/
}
div.toolbox .row-selector {
    float: left;
}
div.toolbox .column-selector {
    float: right;
}
.action-check .value {
    margin-left: 5px;
}
div.toolbox .selectors {
    margin-left: 10px;
}
div.toolbox .toolbar-menu {
    float: left;
    margin-left: 10px;
}
{% endblock %}